apiVersion: v1
kind: Config
clusters:
  - name: ${cluster_name}
    cluster:
      server: ${apiserver_endpoint}
      certificate-authority: ${cacert_file}
contexts:
  - context:
      cluster: ${cluster_name}
      user: ${username}
    name: default
users:
  - name: ${username}
    user:
      client-certificate: ${client_cert_file}
      client-key: ${client_key_file}
current-context: default
